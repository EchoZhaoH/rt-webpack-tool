{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./public/",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "rootDir": ".",
    "jsxFactory": "react.createElement",
    "paths": {
      "@root/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node-modules"
  ]
}
